<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.eclipsesv.model.User" table="USERS">
        <id name="userId" type="int">
            <column name="USER_ID" precision="5" scale="0" />
            <generator class="assigned" />
        </id>
        <property name="userName" type="string">
            <column name="USER_NAME" length="15" not-null="true" />
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="12" not-null="true" />
        </property>
        <property name="createdDate" type="date">
            <column name="CREATEDTIME" length="20" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="20" not-null="true" />
        </property>
        <property name="sex" type="int">
            <column name="SEX" length="2" not-null="true" />
        </property>
        <property name="title" type="string">
            <column name="TITLE" length="20" not-null="false" />
        </property>
        <property name="tel" type="int">
            <column name="TEL" length="13" not-null="false" />
        </property>
        <property name="department" type="int">
            <column name="DEPARTMENT" length="13" not-null="false" />
        </property>
    </class>
</hibernate-mapping>